{
  "pluginAlias": "security-system",
  "pluginType": "accessory",
  "headerDisplay": "Homebridge plugin that creates a security system accessory that can be triggered by HomeKit accessories.",
  "footerDisplay": "Need help? [Go to the issues page](https://github.com/MiguelRipoll23/homebridge-securitysystem/issues) and ask a question!",
  "schema": {
    "name": {
      "title": "Name",
      "type": "string",
      "default": "Security system",
      "required": true
    },
    "default_mode": {
      "title": "Default Mode",
      "type": "string",
      "default": "Off",
      "required": true,
      "enum": [
        "Off",
        "Home",
        "Night",
        "Away"
      ]
    },
    "disabled_modes": {
      "title": "Disabled Modes",
      "type": "array",
      "required": false,
      "items": {
        "title": "Mode",
        "type": "string",
        "enum": [
          "Off",
          "Home",
          "Night",
          "Away"
        ],
        "uniqueItems": true
      }
    },
    "arm_seconds": {
      "title": "Arm Seconds",
      "type": "integer",
      "default": 0,
      "required": false,
      "minimum": 0
    },
    "trigger_seconds": {
      "title": "Trigger Seconds",
      "type": "integer",
      "default": 0,
      "required": false,
      "minimum": 0
    },
    "siren_switch": {
      "title": "Show Siren Switch",
      "type": "boolean",
      "default": true,
      "required": false
    },
    "siren_mode_switches": {
      "title": "Show Siren Mode Switches",
      "type": "boolean",
      "default": false,
      "required": false
    },
    "override_off": {
      "title": "Siren Switch Overrides Off Mode",
      "type": "boolean",
      "default": false,
      "required": false
    },
    "save_state": {
      "title": "Save State On Mode Change",
      "type": "boolean",
      "default": false,
      "required": false
    },
    "server_port": {
      "title": "Server Port",
      "type": "integer",
      "required": false,
      "minimum": 0
    },
    "server_code": {
      "title": "Server Code (for authentication)",
      "type": "integer",
      "required": false,
      "minimum": 0
    },
    "webhook_url": {
      "title": "Webhook Base URL",
      "type": "string",
      "required": false,
      "format": "uri"
    },
    "webhook_triggered": {
      "title": "Webhook Path: Triggered",
      "type": "string",
      "required": false
    },
    "webhook_alert": {
      "title": "Webhook Path: Alert",
      "type": "string",
      "required": false
    },
    "webhook_home": {
      "title": "Webhook Path: Home",
      "type": "string",
      "required": false
    },
    "webhook_away": {
      "title": "Webhook Path: Away",
      "type": "string",
      "required": false
    },
    "webhook_night": {
      "title": "Webhook Path: Night",
      "type": "string",
      "required": false
    },
    "webhook_off": {
      "title": "Webhook Path: Off",
      "type": "string",
      "required": false
    },
    "command_triggered": {
      "title": "Command: Triggered",
      "type": "string",
      "required": false
    },
    "command_alert": {
      "title": "Command: Alert",
      "type": "string",
      "required": false
    },
    "command_target_home": {
      "title": "Command: Target Home",
      "type": "string",
      "required": false
    },
    "command_target_away": {
      "title": "Command: Target Home",
      "type": "string",
      "required": false
    },
    "command_target_night": {
      "title": "Command: Target Night",
      "type": "string",
      "required": false
    },
    "command_current_home": {
      "title": "Command: Current Home",
      "type": "string",
      "required": false
    },
    "command_current_away": {
      "title": "Command: Current Away",
      "type": "string",
      "required": false
    },
    "command_current_night": {
      "title": "Command: Current Night",
      "type": "string",
      "required": false
    },
    "command_off": {
      "title": "Command: Off",
      "type": "string",
      "required": false
    }
  }
}